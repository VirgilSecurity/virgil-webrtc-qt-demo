<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.CallerName"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/callerIconIV"
        style="@style/AppTheme.CallerIcon"
        android:layout_marginStart="@dimen/icl_caller_icon_left"
        android:layout_marginTop="@dimen/icl_caller_icon_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    <TextView
        android:id="@+id/callerNameTV"
        style="@style/AppTheme.CallerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antonio Hommuk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/callerIconIV"
        app:layout_constraintTop_toTopOf="@+id/callerIconIV" />

    <Button
        android:id="@+id/declineBtn"
        style="@style/AppTheme.DeclineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/icl_decline_btn_top"
        android:text="@string/decline_call"
        app:layout_constraintTop_toBottomOf="@+id/callerIconIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/answerBtn"
         />

    <Button
        android:id="@+id/answerBtn"
        style="@style/AppTheme.AnswerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer_call"
        app:layout_constraintTop_toTopOf="@+id/declineBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/declineBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>